# Timezone
TZ=America/Mexico_City

# User/Group IDs (for file permissions)
PUID=1000
PGID=1000

# Domain Configuration
DOMAIN=bowline.im
SUBDOMAIN=matrix
ELEMENT_SUBDOMAIN=element
ADMIN_SUBDOMAIN=matrix-admin

# Matrix Server Configuration
SERVER_NAME=bowline.im  # This should match your domain for federation

# Storage Paths
CONFIG_PATH=./data

# PostgreSQL Database
POSTGRES_DB=synapse
POSTGRES_USER=synapse
POSTGRES_PASSWORD=  # Generate with: openssl rand -base64 32

# Registration Settings
ENABLE_REGISTRATION=false  # Set to true to allow public registration
REGISTRATION_SHARED_SECRET=  # Generate with: openssl rand -base64 32

# Federation
FEDERATION_PORT=8448

# Pocket ID OIDC/SSO Configuration
# Create an OIDC client in Pocket ID and fill in these values
# See SETUP_OIDC.md for detailed setup instructions
OIDC_ISSUER=https://pocket-id.bowline.im  # Your Pocket ID instance URL
OIDC_CLIENT_ID=  # Client ID from Pocket ID (e.g., matrix-synapse)
OIDC_CLIENT_SECRET=  # Client Secret from Pocket ID (keep this secure!)
