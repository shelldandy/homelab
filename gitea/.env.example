# Database settings
DB_NAME=gitea
DB_USER=gitea
DB_PASSWORD=change_this_password

SUBDOMAIN=gitea
# Server settings
DOMAIN=localhost
# For external access (your browser)
ROOT_URL=http://localhost:3000/
# For runner to access gitea internally
GITEA_INTERNAL_URL=http://gitea:3000/
HTTP_PORT=3000
SSH_PORT=222

# Data storage
DATA_PATH=/mnt/data/docker/gitea

# Runner settings
GITEA_RUNNER_REGISTRATION_TOKEN=your_token_here
RUNNER_NAME=gitea-runner

# User settings (optional)
USER_UID=1000
USER_GID=1000
