TZ=America/Mexico_City
# =============================================================================
# Backup Service Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file with real credentials!

# -----------------------------------------------------------------------------
# Encryption
# -----------------------------------------------------------------------------
# GPG passphrase for encrypting backups
# Use a strong, unique passphrase - you'll need this to restore backups!
# IMPORTANT: Store this passphrase securely (password manager, encrypted vault)
GPG_PASSPHRASE=your-strong-passphrase-here

# -----------------------------------------------------------------------------
# Local Backup Storage
# -----------------------------------------------------------------------------
# Path on /dev/sdc where local backups will be stored
# Make sure this path exists and has enough space (~280GB for 14 days retention)
# Example: /mnt/backup-drive/homelab
LOCAL_BACKUP_PATH=/path/to/local/backup/directory

# -----------------------------------------------------------------------------
# Backblaze B2 Configuration
# -----------------------------------------------------------------------------
# B2 bucket name (create this in your Backblaze account first)
# Example: my-homelab-backups
B2_BUCKET_NAME=your-b2-bucket-name

# B2 Application Key ID (create under "App Keys" in Backblaze)
# Looks like: 000abc123def456789012345
B2_KEY_ID=your-b2-key-id

# B2 Application Key (secret - shown only once when created)
# Looks like: K000aBcDeFgHiJkLmNoPqRsTuVwXyZ
B2_APPLICATION_KEY=your-b2-application-key

# B2 S3-compatible endpoint for your region
# US West: s3.us-west-000.backblazeb2.com
# US East: s3.us-east-005.backblazeb2.com
# EU Central: s3.eu-central-003.backblazeb2.com
# Find yours at: https://www.backblaze.com/b2/docs/s3_compatible_api.html
B2_ENDPOINT=s3.us-west-000.backblazeb2.com

# -----------------------------------------------------------------------------
# Optional: Notifications
# -----------------------------------------------------------------------------
# Receive notifications on backup success/failure via various services
# Supports: Discord, Slack, Gotify, Telegram, email, and more
# Format: service://credentials@host/path
# Examples:
#   Discord: discord://webhook_id/webhook_token
#   Gotify: gotify://host/token
#   Email: smtp://user:pass@host:port/?from=backup@example.com&to=admin@example.com
# Leave commented out to disable notifications
# NOTIFICATION_URLS=your-notification-url-here

# -----------------------------------------------------------------------------
# Advanced Settings (optional - defaults are usually fine)
# -----------------------------------------------------------------------------
# Backup schedule (cron expression) - default: 0 4 * * * (4:00 AM daily)
# BACKUP_CRON_EXPRESSION=0 4 * * *

# Retention period in days - default: 14
# BACKUP_RETENTION_DAYS=14

# Backup file compression level (1-9, higher = more compression but slower)
# BACKUP_COMPRESSION=gz

# Stop timeout for containers (how long to wait before forcing stop)
# BACKUP_STOP_CONTAINER_TIMEOUT=300
